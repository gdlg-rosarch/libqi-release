Subject: [PATCH 3/7] add C++11 flags to whoever uses that lib

---
 cmake/libqi-extras.cmake.em | 3 +++
 1 file changed, 3 insertions(+)

diff --git a/cmake/libqi-extras.cmake.em b/cmake/libqi-extras.cmake.em
index a720060f..894d2edb 100644
--- a/cmake/libqi-extras.cmake.em
+++ b/cmake/libqi-extras.cmake.em
@@ -1,3 +1,6 @@
 @[if DEVELSPACE]@
 include_directories(@(CATKIN_DEVEL_PREFIX)/include)
 @[end if]@
+if ("${CMAKE_CXX_COMPILER_ID}" STREQUAL "Clang" OR "${CMAKE_CXX_COMPILER_ID}" STREQUAL "GNU")
+  set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -std=gnu++11")
+endif()
